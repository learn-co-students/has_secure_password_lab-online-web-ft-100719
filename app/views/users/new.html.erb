<h1>Sign-up for a New login id</h1>
<% form_for @user do |f| %>
    <%= f.label_tag :name %>
    <%= f.text_field_tag :name %>
    <%= f.label_tag :password %>
    <%= f.text_field_tag :password, type: "password" %>
    <% f.label_tag :password_confirmation %>
    <%= f.text_field_tag :password_confirmation, type: "password" %>
<% end %>
